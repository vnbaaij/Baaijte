@page "/viewpost/{PostId}"
@layout MainLayout
@inherits ViewPostModel

<BHeader Heading=@BlogPost.Title Author=@BlogPost.Author PostedDate=@BlogPost.Posted></BHeader>

<article>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @((MarkupString)BlogPost.Post)
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <NavLink class="btn btn-primary float-right" href="@($"/editpost/{BlogPost.Id}")">Edit</NavLink>
            </div>
        </div>
    </div>
</article>