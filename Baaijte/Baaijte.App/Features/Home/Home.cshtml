@page "/"
@layout MainLayout
@inherits HomeModel

<BHeader Heading="Baaijte" SubHeading="A Blazor Powered Blogging App"></BHeader>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            @foreach (var post in BlogPosts)
            {
                <BlogPostPreview BlogPost=@post></BlogPostPreview>
                <hr />
            }
        </div>
    </div>
</div>
